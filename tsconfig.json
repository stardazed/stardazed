{
	// this tsconfig is only here to set the standard for all packages
	// so VSCode will detect and report errors properly

	"compilerOptions": {
		"module": "es2015",
		"target": "es2015",
		"moduleResolution": "node",

		"noEmitOnError": true,
		"noEmit": true, // prevent accidental build artifacts

		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"lib": ["dom", "es5", "es2015", "es2016", "es2017", "esnext"]
	},
	"include": [
		"packages/**/*.ts"
	]
}
