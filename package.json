{
	"name": "stardazed",
	"version": "0.5.0",
	"description": "Solid 3D Web Game Engine",
	"license": "MIT",
	"private": true,
	"homepage": "https://github.com/stardazed/stardazed",
	"author": {
		"name": "Arthur Langereis",
		"url": "https://twitter.com/zenmumbler"
	},
	"main": "index.js",
	"module": "index.js",
	"types": "index.d.ts",
	"files": [
		"container",
		"core",
		"geometry",
		"vector",
		"global-types.d.ts",
		"index.*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/stardazed/stardazed.git"
	},
	"keywords": [
		"game-engine",
		"webgl",
		"3d"
	],
	"scripts": {
		"clean": "rm -rf ./__build; rm -rf ./container; rm -rf ./core; rm -rf ./geometry; rm -rf ./vector; rm ./global-types.d.ts",
		"compile": "tsc -b src/tsconfig.json",
		"compile:watch": "tsc -b -w src/tsconfig.json",
		"bundle": "rollup -c",
		"bundle:watch": "rollup -c -w",
		"lint": "eslint --ext ts src"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"rollup": "^1.31.0",
		"rollup-plugin-dts": "^1.2.1",
		"tslib": "^1.10.0",
		"typescript": "^3.7.5"
	}
}
