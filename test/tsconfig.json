{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "rootDir": "src",
        "outFile": "build/sd-tests.js",
        "noEmitOnError": true,
        "diagnostics": false,
        "listFiles": false,

        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

		"lib": ["es5", "dom", "es2015", "es2016", "es2017"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": false,

        "removeComments": true,
        "sourceMap": false
    },
    "include": [
        "testmain.ts",
        "tests/*.ts"
    ]
}
