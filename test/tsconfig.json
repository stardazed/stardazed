{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "rootDir": "src",
        "outDir": "build",
        "noEmitOnError": true,
        "diagnostics": false,
        "listFiles": false,

        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,

        "removeComments": true,
        "sourceMap": false
    },
    "exclude": [
        "build"
    ]
}
