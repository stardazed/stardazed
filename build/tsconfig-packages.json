{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2015",
		"moduleResolution": "node",

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": false,
		"noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"lib": ["dom", "es5", "es2015", "es2016", "es2017"],
		"skipLibCheck": false
	}
}
