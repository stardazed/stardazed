{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",

        "rootDir": "src",
        "outFile": "build/inquisition.js",
        "removeComments": true,
        "sourceMap": false,
        "declaration": true,
        "noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"lib": ["dom", "es5", "es2015", "es2016", "es2017"]
    },
    "include": ["src/*.ts"]
}
