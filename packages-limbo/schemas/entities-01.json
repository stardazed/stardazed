{
	"id": "https://stardazed.club/schemas/scene-01#",
	"$schema": "http://json-schema.org/draft-06/schema#",
	"description": "Stardazed Entities Definition v0",
	"type": "object",
	"properties": {
		"schema-version": {
			"const": 0
		},
		"entities": {
			"type": "array",
			"items": {
				"$ref": "#definitions/entity"
			}
		}
	},
	"additionalProperties": false,
	"required": [
		"schema-version"
	],
	"definitions": {
		"entity": {
			"type": "object",
			"properties": {
				"pos": {
					"type": "array",
					"items": {
						"type": "number"
					},
					"minItems": 3,
					"maxItems": 3
				},
				"model": {
					"type": "string",
					"minLength": 1
				},
				"collider": {
					"$ref": "#definitions/collider"
				}
			},
			"additionalProperties": false
		},
		"collider": {
			"type": "object",
			"properties": {
				"friction": {
					"type": "number",
					"minimum": 0,
					"maximum": 1
				},
				"shape": {
					"type": "object",
					"oneOf": [
						{
							"$ref": "#definitions/boxShape"
						},
						{
							"$ref": "#definitions/meshShape"
						}
					]
				}
			}
		},
		"boxShape": {
			"type": "object",
			"description": "A Box shape",
			"properties": {
				"type": {
					"const": "box"
				},
				"extents": {
					"type": "array",
					"items": {
						"type": "number"
					},
					"minItems": 3,
					"maxItems": 3
				}
			},
			"additionalProperties": false
		},
		"meshShape": {
			"type": "object",
			"description": "A Mesh shape",
			"properties": {
				"type": {
					"const": "mesh"
				}
			},
			"additionalProperties": false
		}
	}
}