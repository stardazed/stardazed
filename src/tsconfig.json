{
	"compilerOptions": {
		"module": "amd",
		"target": "es2015",

		"outFile": "../dist/stardazed.js",
		"declaration": true,
		"sourceMap": false,
		"removeComments": true,
		"noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"lib": ["dom", "es5", "es2015", "es2016", "es2017"]
	},
	"exclude": [
		"build"
	]
}
