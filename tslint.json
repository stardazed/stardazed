{
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		/* Maintainability */
		"eofline": true,
		"indent": [true, "tabs"],
		"linebreak-style": [true, "LF"],
		"max-file-line-count": [false],
		"max-line-length": [false],
		"max-classes-per-file": false,
		"no-trailing-whitespace": false,
		"object-literal-sort-keys": false,
		"trailing-comma": [false],

		/* TypeScript Specific */
		"array-type": [true, "array"],
		"member-access": false,
		"member-ordering": [false],
		"no-inferrable-types": [true],
		"no-namespace": false,
		"no-reference": false,
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			},
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			}
		],

		// /* Functionality */
		"curly": true,
		// "forin": false,
		"no-bitwise": false,
		// "no-conditional-assignment": false,
		"no-console": [true, "log"], // use info instead
		"no-debugger": false,
		"no-empty": false,
		// "no-for-in-array": true, // requires type checking
		"no-null-keyword": false,
		"no-unused-expression": [true, "allow-fast-null-checks", "allow-new"],
		"no-string-literal": false,
		"no-empty-interface": false,
		"no-shadowed-variable": false,
		// "radix": false,

		/* Style */
		"callable-types": false,
		"arrow-parens": false,
		"only-arrow-functions": false,
		"ordered-imports": false,
		"comment-format": [true, "check-space"],
		"interface-name": [true, "never-prefix"],
		"no-consecutive-blank-lines": [true, 2],
		"one-line": [true, "check-open-brace", "check-whitespace"],
		"one-variable-per-declaration": [false],
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-trailing-underscore", "allow-pascal-case"],
		"whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type"]
	}
}