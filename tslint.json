{
	"rules": {
		/* TypeScript Specific */
		"adjacent-overload-signatures": false, // is buggy
		"member-access": false,
		"member-ordering": [false],
		"no-any": false,
		"no-inferrable-types": [true],
		"no-internal-module": true,
		"no-namespace": false,
		"no-reference": false,
		"no-var-requires": true,
		"only-arrow-functions": [false],
		"typedef": [false],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			},
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			}
		],

		// added in v4.2
		"callable-types": true,
		"interface-over-type-literal": true,
		"no-empty-interface": true,
		"no-string-throw": true,

		// added in v4.3
		"import-spacing": true,
		"space-before-function-paren": [true, {
			"anonymous": "never",
			"asyncArrow": "always",
			"constructor": "never",
			"method": "never",
			"named": "never"
		}],
		"typeof-compare": true,
		"unified-signatures": true,

		// added in v4.4
		"arrow-return-shorthand": true,
		"no-unnecessary-initializer": true,
		"no-misused-new": true,

		// added in v4.5
		"no-import-side-effect": true,
		"match-default-export-name": true,
		"no-non-null-assertion": false,
		"ban-types": [false],
		"no-duplicate-super": false,
		"newline-before-return": false,

		/* Functionality */
		"ban": false,
		"curly": true,
		"forin": false,
		"label-position": true,
		"no-arg": true,
		"no-bitwise": false,
		"no-conditional-assignment": false,
		"no-console": [false],
		"no-construct": true,
		"no-debugger": false,
		"no-duplicate-variable": true,
		"no-empty": false,
		"no-eval": true,
		"no-for-in-array": false, // sublimeliner-tslint does not enable type checking
		"no-null-keyword": false,
		"no-shadowed-variable": true,
		"no-string-literal": true,
		"no-unsafe-finally": true,
		"no-unused-expression": true,
		"no-unused-new": true,
		"no-var-keyword": true,
		"radix": false,
		"restrict-plus-operands": false, // sublimeliner-tslint does not enable type checking
		"switch-default": false,
		"triple-equals": false,
		"use-isnan": true,

		/* Maintainability */
		"eofline": true,
		"indent": [true, "tabs"],
		"linebreak-style": [true, "LF"],
		"max-file-line-count": [false],
		"max-line-length": [false],
		"no-default-export": false,
		"no-mergeable-namespace": false, // is buggy
		"no-require-imports": true,
		"no-trailing-whitespace": false,
		"object-literal-sort-keys": false,
		"trailing-comma": [false],

		/* Style */
		"align": [true, "parameters", "arguments", "statements"],
		"arrow-parens": false,
		"class-name": true,
		"comment-format": [true, "check-space"],
		"file-header": [false],
		"interface-name": [true, "never-prefix"],
		"jsdoc-format": true,
		"new-parens": true,
		"no-angle-bracket-type-assertion": false,
		"no-consecutive-blank-lines": [true, 2],
		"object-literal-key-quotes": [false],
		"object-literal-shorthand": false,
		"one-line": [false],
		"one-variable-per-declaration": [false],
		"ordered-imports": [false],
		"quotemark": [true, "double", "avoid-escape"],
		"semicolon": [true, "always"],
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-trailing-underscore", "allow-pascal-case"],
		"whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type"]
	}
}